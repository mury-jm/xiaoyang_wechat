/* miniprogram/pages/tally/tally.wxss */

.ccc_background{
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
  background-color: #f1f1f1;
  z-index: -1;
}


.top_bac{
  height: 180rpx;
  background-image: linear-gradient(to right , #fc9666 , #fd6363);
  position: relative;
  padding: 10% 5%;
  margin-bottom: 100rpx;
}
.top_box{
  position: absolute;
  width: 90%;
  height: 360rpx;
  background-color: white;
  border-radius: 40rpx;
  box-shadow: 0px 3px 10px #a5a5a5;
  box-sizing: border-box;
}

.imgs_box{
  width: 20%;
  padding: 20rpx;
  box-sizing: border-box;
  float: left;
  text-align: center;
  font-size: 28rpx;
  color: rgb(205,205,205);
}

.image{
  width: 100%;
  height: 100%;
}

.active_imges{
  transform: scale(1.1);
  /* transition: all 1s; */
  color: #fd6363;
  font-weight: 700;
}

.choose_box{
  margin: 160rpx 5% 0; 
  padding: 10rpx;
  border-radius: 20rpx;
  background-color: white;
}

.choose_top{
  border-bottom: 1px solid #a5a5a5;
  padding: 10rpx 0 20rpx;
  position: relative;
}

.choose_top_r{
  position: absolute;
  width: 220rpx; 
  border: 1px solid #fd6363;
  overflow: hidden;
  border-radius: 20rpx;
  text-align: center;
  left: 0;
  right: 0;
  margin: auto;
}

.choose_top_r .fl{
  width: 50%;
}

.choose_top_r .active{
  background-color: #fd6363;
  color: white;
}

.bottomes{
  width: 18%;
  border-radius: 40rpx;
  margin: 20rpx 1%;
  box-sizing: border-box;
  background-color: #f7f7f7;
  padding: 10rpx;
  text-align: center;
  font-size: 28rpx;
}

.bottomes_active{
  background-color: #fe8588;
  color: white;
  font-weight: 700;
}

.input_box{
  margin: 30rpx 5%;
  background-color: white;
  border-radius: 40rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.input_box .money{
  margin: 20rpx;
}

.input_box .money text{
  margin-right: 50rpx;
}

.date_box{
  width: 80%;
  height: 100%;
}

.save_box{
  margin: 0  5%;
  width: 90%;
  background-color: #fe8588;
  border-radius: 40rpx;
  height: 80rpx ;
  text-align: center;
  color: white;
  font-weight: 700;
}

button:not([size='mini']) {
  width: 90%;
}